{
  "name": "iobroker.codesys-nvl",
  "version": "0.0.1",
  "description": "Send and receive Network Variable Lists (NVL) from CODESYS driven PLC",
  "author": {
    "name": "Bannsaenger",
    "email": "bannsaenger@gmx.de"
  },
  "contributors": [
    {
      "name": "Bannsaenger"
    }
  ],
  "homepage": "https://github.com/Bannsaenger/ioBroker.codesys-nvl",
